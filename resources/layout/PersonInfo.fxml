              </rowConstraints>
               <children>
                  <Label text="姓名：" GridPane.halignment="RIGHT" />
                  <Label fx:id="nameLabel" text="xxx" GridPane.columnIndex="1" />
                  <Label text="性别：" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                  <Label fx:id="genderLabel" text="xxx" GridPane.columnIndex="3" />
                  <Label text="年龄：" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <Label fx:id="ageLabel" text="xxx" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </content>
</ScrollPane>
